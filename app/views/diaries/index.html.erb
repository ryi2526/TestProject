<!-- 特殊な変数 クライアントユーザへの通知を出す -->
<p id="notice"><%= notice %></p>

<h1>Diaries</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>中身</th>
      <th>登録日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<!-- テーブル用のBody -->
  <tbody>
    <!-- コントローラで代入したDBの値をBOFからEOFまでループする -->
    <% @diaries.each do |diary| %>
      <tr>
        <td><%= link_to diary.id, diary %></td>
        <td><%= diary.title %></td>
        <td><%= diary.body %></td>
        <td><%= diary.created_at %></td>
        <!-- 各種のリンクを定義　表示　show はdiaryに受け取った変数を代入して移動 -->
        <td><%= link_to 'Show', diary %></td>
        <td><%= link_to 'Edit', edit_diary_path(diary) %></td>
        <td><%= link_to 'Destroy', diary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Diary', new_diary_path %>
